{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="stats-card text-start">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                    <h6 class="text-muted text-uppercase mb-1">Détails</h6>
                    <h2>{{ task.title }}</h2>
                </div>
                <span class="badg rounded-pill px-3 py-2 border" style="background: {{ task.status ? 'rgba(16, 185, 129, 0.1)' : 'rgba(245, 158, 11, 0.1)' }}; color: {{ task.status ? 'var(--success-color)' : 'var(--warning-color)' }}; border-color: currentColor !important;">
                    {{ task.status ? 'Terminée' : 'En cours' }}
                </span>
            </div>

            <div class="mb-4">
                <label class="text-muted small fw-bold">DESCRIPTION</label>
                <div class="p-3 rounded mt-1" style="background: rgba(0,0,0,0.03);">
                    {{ task.description|default('Aucune description')|nl2br }}
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted small fw-bold">DATE LIMITE</label>
                    <div class="fs-5">
                        {% if task.deadline %}
                            <i class="bi bi-calendar-event me-2"></i> {{ task.deadline|date('d M Y') }}
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6">
                     <label class="text-muted small fw-bold">ID TÂCHE</label>
                     <div class="fs-5 font-monospace">#{{ task.id }}</div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-5 pt-3 border-top" style="border-color: var(--glass-border) !important;">
                <a href="{{ path('task_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
                
                <div class="d-flex gap-2">
                    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <form action="{{ path('task_delete', {'id': task.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button type="submit" class="btn btn-danger text-white">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
