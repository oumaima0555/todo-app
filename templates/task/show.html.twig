{% extends 'base.html.twig' %}

{% block title %}Détail de la Tâche{% endblock %}

{% block body %}
<h1>Détail de la Tâche</h1>

<p><strong>ID :</strong> {{ task.id }}</p>
<p><strong>Title :</strong> {{ task.title }}</p>
<p><strong>Description :</strong> {{ task.description }}</p>
<p><strong>Status :</strong> 
    {% if task.status %}
        Terminée
    {% else %}
        À faire
    {% endif %}
</p>
<p><strong>Créée le :</strong> {{ task.createdAt|date('d/m/Y H:i') }}</p>

<a href="{{ path('task_index') }}">Retour à la liste</a>
<a href="{{ path('task_edit', {'id': task.id}) }}">Modifier</a>
{% endblock %}
