{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<a href="{{ path('task_new') }}" class="btn btn-primary mb-3">Ajouter une tâche</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.status ? 'Terminée' : 'À faire' }}</td>
                <td>
                    <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <form action="{{ path('task_delete', {'id': task.id}) }}" method="post" style="display:inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucune tâche trouvée</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
