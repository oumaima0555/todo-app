{% extends 'base.html.twig' %}

{% block title %}Accueil - Todo App{% endblock %}

{% block body %}
<div class="row align-items-center justify-content-center" style="min-height: 60vh;">
    <div class="col-lg-8 text-center">
        
        <div class="mb-5">
            <div class="d-inline-flex align-items-center justify-content-center mb-4" 
                 style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--primary-color), #fb7185); border-radius: 24px; box-shadow: 0 10px 30px -10px var(--primary-glow);">
                <i class="bi bi-check2-square text-white" style="font-size: 2.5rem;"></i>
            </div>
            
            <h1 class="display-4 fw-bold mb-3" style="color: var(--text-primary); letter-spacing: -0.03em;">
                Bienvenue sur <span style="background: linear-gradient(135deg, var(--primary-color), #f43f5e); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Todo App</span>
            </h1>
            
            <p class="lead mb-5 mx-auto" style="color: var(--text-secondary); max-width: 500px;">
                Organisez votre journée, priorisez vos tâches et boostez votre productivité avec une interface moderne et intuitive.
            </p>
        </div>

        {% if app.user %}
            <div class="stats-card d-inline-block text-start p-4" style="min-width: 300px;">
                <div class="d-flex align-items-center mb-3 text-muted">
                    <i class="bi bi-person-circle fs-4 me-2"></i>
                    <span>Connecté en tant que</span>
                </div>
                <h4 class="mb-4 text-truncate">{{ app.user.email }}</h4>
                <div class="d-grid gap-2">
                    <a href="{{ path('task_index') }}" class="btn btn-primary d-flex align-items-center justify-content-center gap-2 py-3">
                        <i class="bi bi-rocket-takeoff-fill"></i> Accéder à mon espace
                    </a>
                    <a href="{{ path('app_logout') }}" class="btn btn-secondary py-2">
                        Se déconnecter
                    </a>
                </div>
            </div>
        {% else %}
            <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                <a href="{{ path('app_login') }}" class="btn btn-primary px-5 py-3 fs-5 d-flex align-items-center gap-2 shadow-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </a>
                <a href="{{ path('app_register') }}" class="btn btn-secondary px-5 py-3 fs-5 d-flex align-items-center gap-2">
                    <i class="bi bi-person-plus"></i> Créer un compte
                </a>
            </div>
            
            <div class="mt-5 pt-4">
                <div class="row g-4 justify-content-center">
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2 text-muted small">
                            <i class="bi bi-check-circle-fill text-success"></i> 100% Gratuit
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2 text-muted small">
                            <i class="bi bi-shield-check-fill text-primary"></i> Sécurisé
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2 text-muted small">
                            <i class="bi bi-lightning-charge-fill text-warning"></i> Rapide
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}