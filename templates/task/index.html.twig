{% extends 'base.html.twig' %}

{% block title %}Mes T√¢ches{% endblock %}

{% block body %}
    {# 1Ô∏è‚É£ DASHBOARD #}

    <div class="row g-4 mb-5">
        <div class="col-md-4">
             <div class="stats-card h-100 d-flex flex-column justify-content-center text-center" style="min-height: 180px;">
                <div class="stat-label">Total</div>
                <div class="stat-value">{{ counters.total }}</div>
            </div>
        </div>
         <div class="col-md-4">
             <div class="stats-card h-100 d-flex flex-column justify-content-center text-center" style="min-height: 180px;">
                <div class="stat-label">Termin√©es</div>
                <div class="stat-value text-success" style="-webkit-text-fill-color: initial;">{{ counters.done }}</div>
            </div>
        </div>
         <div class="col-md-4">
             <div class="stats-card h-100 d-flex flex-column justify-content-center text-center" style="min-height: 180px;">
                <div class="stat-label">√Ä Faire</div>
                <div class="stat-value text-warning" style="-webkit-text-fill-color: initial;">{{ counters.todo }}</div>
            </div>
        </div>
    </div>

    {# üîç Recherche et Filtres #}
    <div class="mb-5">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text" style="background: var(--card-bg); border: 1px solid var(--glass-border); border-right: none; border-radius: 12px 0 0 12px;">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="q" class="form-control" placeholder="Rechercher une t√¢che..." value="{{ searchParams.q }}" style="border-left: none; border-radius: 0 12px 12px 0;">
                </div>
            </div>
            <div class="col-md-4">
                <select name="status" class="form-select">
                    <option value="">Tous les statuts</option>
                    <option value="done" {{ searchParams.status == 'done' ? 'selected' : '' }}>Termin√©es</option>
                    <option value="todo" {{ searchParams.status == 'todo' ? 'selected' : '' }}>√Ä faire</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100 h-100">
                    Filtrer
                </button>
            </div>
        </form>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="m-0">Vos T√¢ches</h3>
        <a href="{{ path('task_new') }}" class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Nouvelle
        </a>
    </div>

    {# üìã LISTE DES T√ÇCHES (Card Layout) #}
    <div class="task-list">
        {% for task in tasks %}
            <div class="task-item {{ (task.deadline and task.deadline < date() and not task.status) ? 'overdue' : '' }}"
                 data-controller="status"
                 data-status-url-value="{{ path('task_toggle', {'id': task.id}) }}"
                 data-status-status-value="{{ task.status ? 'true' : 'false' }}">
                
                {# CHECKBOX / STATUS ICON #}
                <div class="me-3" style="cursor: pointer;" data-action="click->status#toggle">
                    <div data-status-target="icon" 
                         class="btn-icon" 
                         style="{{ task.status ? 'background: var(--success-color); color: white; border: none;' : 'border: 2px solid var(--text-muted);' }} width: 32px; height: 32px;">
                         {% if task.status %}
                            <i class="bi bi-check-lg"></i>
                         {% endif %}
                    </div>
                </div>

                <div class="task-content">
                    <a href="{{ path('task_show', {'id': task.id}) }}" class="task-title text-reset text-decoration-none">
                        {{ task.title }}
                    </a>
                    {% if task.description %}
                        <div class="task-desc">{{ task.description|u.truncate(60, '...') }}</div>
                    {% endif %}
                    
                    <div class="task-meta">
                        {% if task.deadline %}
                            <span class="{{ (task.deadline < date() and not task.status) ? 'overdue-text' : '' }} d-flex align-items-center gap-1">
                                <i class="bi bi-calendar-event"></i>
                                {{ task.deadline|date('d M Y') }}
                            </span>
                        {% endif %}
                        
                        <span data-status-target="badge" class="task-status-badge {{ task.status ? 'status-done' : 'status-todo' }}">
                            {{ task.status ? 'Termin√©e' : 'En cours' }}
                        </span>
                    </div>
                </div>

                <div class="task-actions">
                    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn-icon" title="Modifier">
                        <i class="bi bi-pencil"></i>
                    </a>
                    
                    <form action="{{ path('task_delete', {'id': task.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Supprimer cette t√¢che ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button type="submit" class="btn-icon delete" title="Supprimer">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-clipboard2-checkDisplay-1 text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                <p class="mt-3 text-muted display-6 fs-4">Aucune t√¢che trouv√©e</p>
                <a href="{{ path('task_new') }}" class="btn btn-secondary mt-2">Cr√©er une t√¢che</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
