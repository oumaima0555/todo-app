{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
<h2>Détails de la tâche</h2>

<ul class="list-group">
    <li class="list-group-item"><strong>ID :</strong> {{ task.id }}</li>
    <li class="list-group-item"><strong>Titre :</strong> {{ task.title }}</li>
    <li class="list-group-item"><strong>Description :</strong> {{ task.description }}</li>
    <li class="list-group-item"><strong>Status :</strong> {{ task.status ? 'Terminée' : 'À faire' }}</li>
    <li class="list-group-item"><strong>Créé le :</strong> {{ task.createdAt|date('d/m/Y H:i') }}</li>
</ul>

<a href="{{ path('task_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
<a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning mt-3">Modifier</a>
<form action="{{ path('task_delete', {'id': task.id}) }}" method="post" style="display:inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button type="submit" class="btn btn-danger mt-3">Supprimer</button>
</form>
{% endblock %}
